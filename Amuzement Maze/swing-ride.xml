<scene>
  <instance name="sphere" path="models/sphere" />
  <instance name="box" path="models/box" />
  <instance name="cylinder" path="models/cylinder" />
  <instance name="cone" path="models/cone" />

  <transform> <!--Start All-->
    <set>
      <scale>22 22 22</scale>
    </set>
    <group name="unit-height-swing">
      <transform>
        <set>
          <scale>1 1 1</scale>
        </set>
        <group>
          <group name="base">
            <transform>
              <set>
                <scale>1.15 .15 1.15</scale>
              </set>
              <object instanceof="sphere">
                <material>
                  <color>1 0 0</color>
                </material>
              </object>
            </transform>
          </group>
          <group name="stem">
            <transform>
              <set>
                <scale>.5 2.25 .5</scale>
              </set>
              <object instanceof="cylinder">
                <material>
                  <color>0 1 0</color>
                </material>
              </object>
            </transform>
            <group name="top">
              <transform>
                <set><!--Translate the whole thing up when done-->
                  <translate>0 2.35 0</translate>
                </set>

                <!--Start creating the top rotating part-->
                <group name="top-dish">
                  <transform>
                    <set>
                      <scale>1.5 .25 1.5</scale>
                    </set>
                    <object instanceof="sphere">
                      <material>
                        <color>0 0 1</color>
                      </material>
                    </object>
                  </transform>
                </group>                                    
              </transform>
              
              
              
              
            </group>
          </group>
        </group>
      </transform>
    </group>
  </transform> <!--End All-->
</scene>